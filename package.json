{
  "name": "phyto-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format-code": "prettier \"./**/*.{ts,tsx}\" --write",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\" --format stylish --fix",
    "lint:styles": "stylelint \"./**/*.{ts,tsx}\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-applypatch": "check-dependencies --install",
      "post-merge": "check-dependencies --install"
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --format stylish --fix",
      "stylelint",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "@types/jest": "24.0.0",
    "@types/node": "12.0.0",
    "@types/react": "16.9.0",
    "@types/react-dom": "16.9.0",
    "@types/styled-components": "5.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.3",
    "styled-components": "5.1.1",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "prettier": "2.1.0",
    "stylelint": "13.6.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-order": "4.1.0",
    "stylelint-processor-styled-components": "1.10.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
